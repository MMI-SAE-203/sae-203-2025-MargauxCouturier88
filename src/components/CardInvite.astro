---
import ImagePB from "./ImagePB.astro";
const { ...invite } = Astro.props;

---

<div class="max-w-sm mx-auto bg-[#7b7c8e] p-4 rounded-lg shadow-lg text-center space-y-4 mb-20">

    <div class="relative w-full h-110 overflow-hidden rounded-lg">
        <ImagePB 
            record={invite} 
            field="photo" 
            alt={invite.photo} 
            classImg="w-full h-full object-cover"
        />
    </div>
    <div class="space-y-2">
        <h2 class="text-xl font-bold text-white">{invite.nom}</h2>
        <p class="text-base text-white">RÃ©alisateur : <span class="font-semibold">{invite.Categorie}</span></p>
    </div>
    <a href=`/invite/${invite.id}` class="inline-block px-4 py-2 bg-[#f5e7c4] text-gray-900 font-semibold rounded-lg shadow-md 
    hover:bg-[#e0d0a8] hover:-translate-y-1 hover:shadow-lg transition-transform duration-300 ease-in-out">
    Plus d'infos
</a>
</div>
