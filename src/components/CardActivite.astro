---
import ImagePB from "./ImagePB.astro";
const { ...Activite } = Astro.props;
import { formatDate } from '../../backend/helpers';
---

<div class="max-w-l mx-auto bg-[#7b7c8e] p-4 rounded-lg shadow-lg text-center space-y-4 mb-20">

    <div class="relative w-full h-70 overflow-hidden rounded-lg">
        <ImagePB 
            record={Activite} 
            field="img" 
            alt={Activite.titre} 
            classImg="w-full h-full object-cover"
        />
    </div>
    <div class="space-y-2">
        <h2 class="text-xl font-bold text-white">{Activite.titre}</h2>
        <p class="text-base text-white"><span class="font-semibold">Première date : {formatDate(Activite.first_date_heure)}</span></p>
        <p class="text-base text-white"><span class="font-semibold">Deuxième date : {formatDate(Activite.second_date_heure)}</span></p>
    </div>
    <a href="#" class="inline-block px-4 py-2 bg-[#f5e7c4] text-gray-900 font-semibold rounded-lg shadow-md 
    hover:bg-[#e0d0a8] hover:-translate-y-1 hover:shadow-lg transition-transform duration-300 ease-in-out">
    Plus d'infos
</a>
</div>