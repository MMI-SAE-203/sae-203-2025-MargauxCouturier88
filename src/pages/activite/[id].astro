---
import { getActivite, oneActiviteID } from '../../../backend/backend.mjs';
import Base  from '../../layouts/Base.astro';
// const { ...film} = Astro.props;
import ImagePB from "../../components/ImagePB.astro";
const { id } = Astro.params;
const Activite = await oneActiviteID(id);
console.log(Activite);

---

<Base titre={Activite.titre}>
    <div class="max-w-2xl mx-auto bg-white shadow-xl rounded-2xl overflow-hidden transition-transform hover:scale-105 duration-300">
        <div class="relative w-full h-64 sm:h-80">
          <ImagePB 
            record={Activite} 
            field="img" 
            alt={Activite.titre} 
            classImg="w-full h-full object-cover"
          />
        </div>
    
        <div class="p-6 space-y-4">
          <h2 class="text-3xl font-bold text-gray-900">{Activite.titre}</h2>
    
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-gray-700">
            <p class="text-sm"><strong class="font-semibold">Type :</strong> {Activite.type}</p>
            <p class="text-sm"><strong class="font-semibold">Catégorie :</strong> {Activite.catergorie}</p>
            <p class="text-sm"><strong class="font-semibold">Durée :</strong> {Activite.duree} min</p>
            <p class="text-sm"><strong class="font-semibold">Salle :</strong> {Activite.lieu}</p>
          </div>
    
          <div class="text-gray-800 text-sm leading-relaxed" set:html={Activite.description}></div>
        </div>
      </div>
</Base>